<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.spiritlink.custom.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="de.spiritlink.custom.ui.Perspective"
            id="de.spiritlink.custom.ui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="de.spiritlink.custom.ui.views.BrowseView"
            id="de.spiritlink.custom.ui.view">
      </view>
      <view
            class="de.spiritlink.custom.ui.views.ChildrenView"
            id="de.spiritlink.custom.ui.views.ChildrenView"
            name="name">
      </view>
      <view
            class="de.spiritlink.custom.ui.views.DetailsView"
            id="de.spiritlink.custom.ui.views.DetailsView"
            name="name">
      </view>
      <category
            id="de.spiritlink.custom.ui"
            name="Sample Category">
      </category>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.spiritlink.custom.ui.application"
            name="My customized RCP Product">
         <property
               name="windowImages"
               value="icons/app_icons/heart.gif,icons/app_icons/heart_32.gif,icons/app_icons/heart_48.gif">
         </property>
         <property
               name="appName"
               value="My customized RCP Product">
         </property>
         <property
               name="aboutText"
               value="(c) Copyright Tom Seidel - Spirit Link GmbH. All rights reserved.&#x0A;&#x0A;Visit http://www.richclient2.eu&#x0A;&#x0A;This program and the accompanying materials&#x0A;are made available under the terms of the Eclipse Public License v1.0&#x0A;which accompanies this distribution, and is available at&#x0A;http://www.eclipse.org/legal/epl-v10.html">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="de.spiritlink.custom.ui.intro">
      </intro>
      <introProductBinding
            introId="org.eclipse.ui.intro.universal"
            productId="de.spiritlink.custom.ui.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            content="introContent.xml"
            id="de.spiritlink.custom.ui.introConfigId"
            introId="de.spiritlink.custom.ui.intro">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx"
                  style="content/shared.css">
            </implementation>
         </presentation>
      </config>
   </extension>

</plugin>
